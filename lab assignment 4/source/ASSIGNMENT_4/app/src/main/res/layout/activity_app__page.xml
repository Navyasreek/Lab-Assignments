<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:clickable="true"
    android:orientation="vertical"
    android:weightSum="1"
    android:textAlignment="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:background="@color/abc_primary_text_material_light"
        android:textColor="@color/bright_foreground_inverse_material_dark"
        android:textAlignment="center"
        android:textStyle="italic"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="89dp"
        android:textColorHighlight="@color/abc_search_url_text_normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Speech to Text App" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textColor="@color/abc_secondary_text_material_dark" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Speaking"
        android:id="@+id/bstopspeaking"
        android:layout_marginEnd="35dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap here to Speak"
        android:id="@+id/bspeak"
        android:drawableBottom="@drawable/mi1"
        android:layout_below="@+id/editText"
        android:layout_toStartOf="@+id/bstopspeaking"
        android:layout_marginEnd="12dp"
        android:onClick="onSpeakClick" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/tvResult"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
