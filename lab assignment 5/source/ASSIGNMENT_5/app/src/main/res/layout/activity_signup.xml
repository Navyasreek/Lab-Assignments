<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image"
    tools:context="labassignment_4.assignment_4.signup">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/first"
        android:layout_alignParentEnd="true"
        android:id="@+id/lastname" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email"
        android:layout_toStartOf="@+id/firstName"
        android:id="@+id/textView9" />

    <Button
        android:text="SignUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="64dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/first"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/enterEmail"
        android:text=""
        android:layout_below="@+id/lastname"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/enterPassword"
        android:text=""
        android:layout_below="@+id/enterEmail"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmpsw"
        android:text=""
        android:layout_below="@+id/textView9"
        android:layout_toEndOf="@+id/cofirmpaswd" />

    <TextView
        android:text="FIRST NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:id="@+id/firstName"
        android:layout_alignBaseline="@+id/first"
        android:layout_alignBottom="@+id/first"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="EMAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_alignBaseline="@+id/enterEmail"
        android:layout_alignBottom="@+id/enterEmail"
        android:layout_alignStart="@+id/password" />

    <TextView
        android:text="PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_alignBaseline="@+id/enterPassword"
        android:layout_alignBottom="@+id/enterPassword"
        android:layout_alignStart="@+id/firstName" />

    <TextView
        android:text="CONFIRM PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cofirmpaswd"
        android:layout_alignBaseline="@+id/confirmpsw"
        android:layout_alignBottom="@+id/confirmpsw"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="LAST NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:layout_alignBaseline="@+id/lastname"
        android:layout_alignBottom="@+id/lastname"
        android:layout_alignStart="@+id/firstName" />
</RelativeLayout>
